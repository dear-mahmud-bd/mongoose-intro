{
  "include": ["src"], // which files to compile
  "exclude": ["node_modules"], // which files to skip
  "compilerOptions": {
    "target": "es2016",
    /* Modules */
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    /* Completeness */
    "skipLibCheck": true /* Skip type checking all .d.ts files. */
  }
}